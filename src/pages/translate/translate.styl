.translateHome {
    background: linear-gradient(blue, #f4c58d);

    .translateTemplate {
        height: 80vh;
        display: grid;
        justify-content: center;
        align-content: center;
        grid-template-columns: 1fr 1fr 1fr;

        .translateBtn {
            display: grid;
            justify-content: center;
            align-content: center;
        }
    }

    h1 {
        margin-top: 50px;
        color: #fff;
    }

    .ipt-con {
        margin: 20px auto 0;
        text-align: center;
    }
}